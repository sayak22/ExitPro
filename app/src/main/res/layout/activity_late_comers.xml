<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context=".LateComersActivity">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_translucent_background"
            android:textSize="12sp"
            android:text="TO CALL JUST CLICK ON THE STUDENT CARD"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textStyle="bold"
            android:padding="5dp"
            />
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_orange_background">

                <TextView
                    android:id="@+id/listStuName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.75"
                    android:textSize="12sp"
                    android:layout_marginRight="5dp"
                    android:textAlignment="center"
                    android:textStyle="bold"

                    android:text="NAME"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/listRollNumber"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_weight="1"
                    android:text="R. No."
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_marginRight="6dp"

                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/listDestination"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_weight="2"
                    android:text="DESTINATION"
                    android:textStyle="bold"
                    android:layout_marginRight="5dp"

                    android:textAlignment="center"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/listExitTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_weight="2"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:text="EXIT TIME"
                    android:textColor="@color/black" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            tools:listitem="@layout/late_item" />

</LinearLayout>